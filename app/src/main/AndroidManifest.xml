<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a1.mygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityIntro"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityMain">
        </activity>
        <activity android:name=".ActivityLevelMenu" />
        <activity
            android:name=".ActivitySinglePlayer"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"  />
        <activity
            android:name=".ActivityHowToPlay"
            android:label="@string/how_title" />
        <activity android:name=".ActivitySettings" />
        <activity
            android:name=".ActivityTwoPlayers"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ActivityLevelEditor"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>
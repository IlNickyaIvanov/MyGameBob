<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_color"
    tools:context="com.example.a1.mygame.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView1"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/editText"
        android:textColor="@color/my_color"
        android:background="@color/txtVIEW"
        android:gravity="center_vertical"
        android:layout_marginLeft="317dp"
        android:layout_marginStart="317dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button"
        android:layout_toLeftOf="@+id/button" />

    <EditText
        android:imeOptions="flagNoExtractUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText"
        android:layout_above="@+id/button"
        android:textColor="@android:color/holo_orange_dark"
        android:hint=" команды..."
        android:textColorHint="@color/my_color"
        android:background="@color/EditTextBG"
        android:layout_toEndOf="@+id/TextView1"
        android:layout_toRightOf="@+id/TextView1"
        android:gravity="top"
        android:textSize="22sp"
        android:layout_alignLeft="@+id/TextView1"
        android:layout_alignStart="@+id/TextView1"
        android:textStyle="normal|bold" />

    <Button
        android:text="старт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onClickStart"
        android:background="@color/BTNstrt"
        android:textStyle="normal|bold"
        android:textColor="@color/my_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
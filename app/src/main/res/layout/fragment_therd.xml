<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">
    <mehdi.sakout.fancybuttons.FancyButton
        android:onClick="addnewlvl"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        fancy:fb_defaultColor="@color/BTN"
        fancy:fb_focusColor="#ffffff"
        fancy:fb_radius="30dp"
        fancy:fb_textSize="24sp"
        fancy:fb_text="@string/add"
        fancy:fb_textColor="#FFFFFF" />

    <ListView
        android:layout_gravity="center"
        android:id="@+id/my_level_list"
        android:layout_width="350dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/nolvl"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_levels" />
</LinearLayout>
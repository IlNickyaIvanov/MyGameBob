<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1.mygame.LevelMenu"
    android:background="@color/bg_color">

    <Button
        android:text="test zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonTESTZONE"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@color/my_color"
        android:layout_marginBottom="134dp"
        android:layout_above="@+id/textView3"
        android:onClick="onClickTestZone" />

    <TextView
        android:text="Это меню выбора уровней, НАХОДИТСЯ В РАЗРАБОТКЕ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="lava zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLAVAZONE"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@color/my_color"
        android:onClick="onClickLavaZone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buttonTESTZONE" />

    <Button
        android:text="Level 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonTESTZONE"
        android:layout_centerHorizontal="true"
        android:id="@+id/button5"
        android:onClick="onClickLevel1" />
</RelativeLayout>
